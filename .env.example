# PostgreSQL Configuration
POSTGRES_USER=specgen
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=specgen
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PgBouncer Configuration
PGBOUNCER_HOST=localhost
PGBOUNCER_PORT=6432
PGBOUNCER_USER=specgen
PGBOUNCER_PASSWORD=change_this_to_a_secure_password

# Database Connection URLs
# Async URL for SQLAlchemy (used by FastAPI)
DATABASE_URL=postgresql+asyncpg://specgen:change_this_to_a_secure_password@localhost:6432/specgen
# Sync URL for SQLAlchemy (used by Alembic migrations)
DATABASE_URL_SYNC=postgresql+psycopg2://specgen:change_this_to_a_secure_password@localhost:6432/specgen

# SSL Configuration
POSTGRES_SSL_MODE=require
POSTGRES_SSL_CERT=./certs/client.crt
POSTGRES_SSL_KEY=./certs/client.key
POSTGRES_SSL_ROOT_CERT=./certs/root.crt

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_KEY_PREFIX=specgen:

# Session Settings
SESSION_TTL=86400
DEFAULT_CACHE_TTL=300
RATE_LIMIT_WINDOW=60

# Vector Database Configuration
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=specgen

# Weaviate Configuration (alternative to Pinecone)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# S3-Compatible Storage (for artifacts and file uploads)
S3_PROVIDER=local
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=specgen-artifacts
S3_REGION=us-east-1

# Local Storage (for local development)
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=http://localhost:8000/uploads

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change_this_to_a_secure_random_key
API_V1_PREFIX=/api/v1

# JWT Configuration
JWT_SECRET_KEY=change_this_to_a_secure_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@specgen.local

# LangChain/LangGraph Configuration
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=specgen

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
